<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.omar.historyguesstheyear.MainActivity">

    <TextView
        android:id="@+id/industrialLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/industrialLevel"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/civilRightsLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/industrialLevel"
        android:layout_alignStart="@+id/industrialLevel"
        android:layout_below="@+id/industrialLevel"
        android:layout_marginTop="2dp"
        android:text="@string/civilRightsDefaultLevel"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/progressiveLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/industrialLevel"
        android:layout_alignStart="@+id/industrialLevel"
        android:layout_below="@+id/civilRightsLevel"
        android:layout_marginTop="2dp"
        android:text="@string/progressiveDefaultLevel"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/industrialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="Button" />

    <Button
        android:id="@+id/civilRightsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/industrialButton"
        android:layout_toRightOf="@+id/industrialButton"
        android:text="Button" />

    <Button
        android:id="@+id/progressiveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/civilRightsButton"
        android:layout_toRightOf="@+id/civilRightsButton"
        android:layout_alignParentBottom="true"
        android:text="Button" />

</RelativeLayout>
